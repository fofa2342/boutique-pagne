      <h3 class="chart-title">Activité Récente</h3>
      <ul class="activity-list">
        <% if (stats.derniersMouvements && stats.derniersMouvements.length > 0) { %>
          <% stats.derniersMouvements.forEach(mouvement => { %>
            <li class="activity-item">
              <div class="activity-icon <%= mouvement.type === 'entree' ? 'entree' : 'sortie' %>">
                <% if (mouvement.type === 'entree') { %>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="7 10 12 15 17 10"></polyline>
                    <line x1="12" y1="15" x2="12" y2="3"></line>
                    <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
                  </svg>
                <% } else { %>
                  <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <polyline points="17 14 12 9 7 14"></polyline>
                    <line x1="12" y1="9" x2="12" y2="21"></line>
                    <path d="M3 9V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v4"></path>
                  </svg>
                <% } %>
              </div>
              <div class="activity-content">
                <div class="activity-text">
                  <strong><%= mouvement.quantite %> unités</strong> 
                  <%= mouvement.type === 'entree' ? 'ajoutées à' : 'retirées de' %> 
                  <strong><%= mouvement.produit_nom %></strong>
                </div>
                <div class="activity-time">
                  <%= new Date(mouvement.date_mouvement).toLocaleString('fr-FR') %>
                  <% if (mouvement.type === 'entree') { %>
                    • Fournisseur: <%= mouvement.fournisseur_nom %>
                  <% } %>
                </div>
              </div>
            </li>
          <% }) %>
        <% } else { %>
          <p style="text-align: center; color: var(--dark-color); opacity: 0.7; padding: 20px;">
            Aucune activité récente
          </p>
        <% } %>
      </ul>
    </div>
  </div>

  <!-- Script pour les données -->
  <script id="monthlyData" type="application/json">
    <%- safeJson(monthlyStats) %>
  </script>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const navItems = document.querySelectorAll('.nav-item');
      const refreshBtn = document.getElementById('refreshBtn');
      const updateTime = document.getElementById('updateTime');

      // Navigation active
      navItems.forEach(item => {
        item.addEventListener('click', function() {
          navItems.forEach(i => i.classList.remove('active'));
          this.classList.add('active');
        });
      });

      // Récupérer les données depuis l'élément caché
      const monthlyDataElement = document.getElementById('monthlyData');
      let monthlyData = { ventes: [], entrees: [] };
      
      if (monthlyDataElement) {
        try {
          monthlyData = JSON.parse(monthlyDataElement.textContent);
        } catch (e) {
          console.error('Erreur parsing JSON:', e);
        }
      }

      // Initialisation du graphique
      initMonthlyChart(monthlyData);

      // Actualisation des données
      refreshBtn.addEventListener('click', function() {
        refreshBtn.disabled = true;
        refreshBtn.innerHTML = '<span class="btn-icon">⏳</span> Actualisation...';
        
        fetch('/dashboard/api/data')
          .then(response => response.json())
          .then(data => {
            if (data.success) {
              updateDashboard(data);
              updateTime.textContent = new Date().toLocaleString('fr-FR');
            }
          })
          .catch(error => {
            console.error('Erreur actualisation:', error);
          })
          .finally(() => {
            refreshBtn.disabled = false;
            refreshBtn.innerHTML = '<span class="btn-icon"><svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><polyline points="23 4 23 10 17 10"></polyline><polyline points="1 20 1 14 7 14"></polyline><path d="M3.51 9a9 9 0 0 1 14.85-3.36L23 10M1 14l4.64 4.36A9 9 0 0 0 20.49 15"></path></svg></span> Actualiser';
          });
      });

      function initMonthlyChart(data) {
        const ctx = document.getElementById('monthlyChart');
        if (!ctx) {
          console.log('Canvas monthlyChart non trouvé');
          return;
        }

        // Les données sont maintenant préparées par le backend
        const labels = data.labels || [];
        const ventesData = data.ventes || [];
        const entreesData = data.entrees || [];

        new Chart(ctx.getContext('2d'), {
          type: 'line',
          data: {
            labels: labels,
            datasets: [
              {
                label: 'Entrées Stock',
                data: entreesData,
                borderColor: '#3498db',
                backgroundColor: 'rgba(52, 152, 219, 0.1)',
                tension: 0.4,
                fill: true
              },
              {

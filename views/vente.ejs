<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Nouvelle Vente - Gestion Commerciale</title>
  <style>
    :root {
      --primary-color: #3498db;
      --secondary-color: #2c3e50;
      --accent-color: #e74c3c;
      --light-color: #ecf0f1;
      --dark-color: #34495e;
      --success-color: #2ecc71;
      --warning-color: #f39c12;
      --border-radius: 8px;
      --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --transition: all 0.3s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      display: flex;
      min-height: 100vh;
      background-color: #f5f7fa;
      color: #333;
    }

    /* Sidebar */
    .sidebar {
      width: 280px;
      background-color: var(--secondary-color);
      color: white;
      padding: 20px 0;
      box-shadow: var(--box-shadow);
      z-index: 100;
      transition: var(--transition);
      overflow-y: auto;
    }

    .logo {
      display: flex;
      align-items: center;
      padding: 0 20px 20px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      margin-bottom: 20px;
    }

    .logo h1 {
      font-size: 1.5rem;
      margin-left: 10px;
    }

    .logo-icon {
      font-size: 1.8rem;
      color: var(--primary-color);
    }

    .nav-section {
      margin-bottom: 30px;
    }

    .nav-section h2 {
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      padding: 0 20px;
      margin-bottom: 15px;
      color: rgba(255, 255, 255, 0.6);
    }

    .nav-item {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      transition: var(--transition);
      border-left: 3px solid transparent;
    }

    .nav-item:hover {
      background-color: rgba(255, 255, 255, 0.05);
      color: white;
      border-left-color: var(--primary-color);
    }

    .nav-item.active {
      background-color: rgba(255, 255, 255, 0.1);
      color: white;
      border-left-color: var(--primary-color);
    }

    .nav-icon {
      margin-right: 12px;
      font-size: 1.2rem;
    }

    /* Main Content */
    .main-content {
      flex: 1;
      padding: 30px;
      overflow-y: auto;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
    }

    .header h1 {
      color: var(--secondary-color);
      font-size: 1.8rem;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      padding: 10px 20px;
      background-color: var(--primary-color);
      color: white;
      text-decoration: none;
      border-radius: var(--border-radius);
      font-weight: 500;
      transition: var(--transition);
      border: none;
      cursor: pointer;
    }

    .btn:hover {
      background-color: #2980b9;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    .btn-icon {
      margin-right: 8px;
    }

    .btn-secondary {
      background-color: var(--secondary-color);
    }

    .btn-secondary:hover {
      background-color: #243342;
    }

    .btn-danger {
      background-color: var(--accent-color);
    }

    .btn-danger:hover {
      background-color: #c0392b;
    }

    .btn-success {
      background-color: var(--success-color);
    }

    .btn-success:hover {
      background-color: #27ae60;
    }

    .btn-warning {
      background-color: var(--warning-color);
    }

    .btn-warning:hover {
      background-color: #e67e22;
    }

    .btn-small {
      padding: 8px 16px;
      font-size: 0.9rem;
    }

    /* Form Styles */
    .card {
      background-color: white;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      padding: 25px;
      margin-bottom: 25px;
    }

    .card h2 {
      color: var(--secondary-color);
      margin-bottom: 20px;
      font-size: 1.3rem;
      padding-bottom: 10px;
      border-bottom: 1px solid var(--light-color);
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 8px;
      font-weight: 600;
      color: var(--dark-color);
    }

    input, select {
      width: 100%;
      padding: 12px 15px;
      border: 1px solid #ddd;
      border-radius: var(--border-radius);
      font-size: 1rem;
      transition: var(--transition);
    }

    input:focus, select:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
    }

    .small {
      font-size: 0.9rem;
      padding: 10px 12px;
    }

    .row {
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    .col {
      flex: 1 1 300px;
    }

    .flex {
      display: flex;
      gap: 15px;
      align-items: end;
    }

    .flex-1 {
      flex: 1;
    }

    .text-right {
      text-align: right;
    }

    .text-center {
      text-align: center;
    }

    .muted {
      color: #7f8c8d;
      font-size: 0.9rem;
    }

    /* Table */
    .table-container {
      background-color: white;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      overflow: hidden;
      margin: 20px 0;
    }

    table {
      width: 100%;
      border-collapse: collapse;
    }

    th {
      background-color: var(--light-color);
      padding: 15px;
      text-align: left;
      font-weight: 600;
      color: var(--dark-color);
      border-bottom: 1px solid #ddd;
    }

    td {
      padding: 15px;
      border-bottom: 1px solid #eee;
    }

    tr:last-child td {
      border-bottom: none;
    }

    tr:hover {
      background-color: rgba(52, 152, 219, 0.05);
    }

    /* Summary & Payments */
    .summary {
      background-color: var(--light-color);
      padding: 20px;
      border-radius: var(--border-radius);
      margin-top: 20px;
    }

    .summary-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 20px;
      margin-bottom: 20px;
    }

    .summary-item {
      display: flex;
      justify-content: space-between;
      padding: 10px 0;
      border-bottom: 1px dashed #bdc3c7;
    }

    .summary-total {
      font-weight: 700;
      font-size: 1.1rem;
      color: var(--primary-color);
    }

    .payment-item {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 15px;
      background-color: white;
      border-radius: var(--border-radius);
      margin-bottom: 10px;
      border: 1px solid #ddd;
    }

    .empty-state {
      text-align: center;
      padding: 40px 20px;
      color: #7f8c8d;
    }

    .empty-state i {
      font-size: 3rem;
      margin-bottom: 15px;
      display: block;
      color: #bdc3c7;
    }

    .divider {
      height: 1px;
      background: linear-gradient(90deg, transparent 0%, #bdc3c7 50%, transparent 100%);
      margin: 20px 0;
    }

    .payments-list {
      margin-top: 15px;
    }

    ul {
      list-style: none;
    }

    li {
      padding: 12px 15px;
      background: white;
      border-radius: var(--border-radius);
      margin-bottom: 8px;
      border: 1px solid #ddd;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    /* Paiement Client */
    .payment-client {
      background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
      border-left: 4px solid var(--primary-color);
    }

    .payment-summary {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
      gap: 15px;
      margin-top: 15px;
    }

    .payment-field {
      display: flex;
      flex-direction: column;
    }

    .payment-field label {
      font-weight: 600;
      margin-bottom: 5px;
      color: var(--dark-color);
    }

    .payment-field input {
      font-weight: 600;
      font-size: 1.1rem;
    }

    .payment-result {
      background-color: white;
      padding: 15px;
      border-radius: var(--border-radius);
      text-align: center;
      font-weight: 700;
      font-size: 1.2rem;
      margin-top: 15px;
    }

    .monnaie {
      border: 2px dashed var(--success-color);
      color: var(--success-color);
    }

    .reste {
      border: 2px dashed var(--warning-color);
      color: var(--warning-color);
    }

    .client-info {
      background: white;
      padding: 15px;
      border-radius: var(--border-radius);
      margin-bottom: 15px;
      border-left: 4px solid var(--primary-color);
    }

    /* Receipt Styles */
    .receipt-container {
      display: none;
    }

    @media print {
      body * {
        visibility: hidden;
      }
      .receipt-container, .receipt-container * {
        visibility: visible;
      }
      .receipt-container {
        position: absolute;
        left: 0;
        top: 0;
        width: 100%;
        padding: 20px;
      }
      .no-print {
        display: none !important;
      }
    }

    .receipt {
      max-width: 300px;
      margin: 0 auto;
      padding: 20px;
      border: 1px solid #ddd;
      background: white;
      font-family: 'Courier New', monospace;
    }

    .receipt-header {
      text-align: center;
      margin-bottom: 15px;
      border-bottom: 1px dashed #333;
      padding-bottom: 10px;
    }

    .receipt-client {
      margin-bottom: 10px;
      padding-bottom: 10px;
      border-bottom: 1px dashed #ccc;
    }

    .receipt-items {
      margin: 15px 0;
    }

    .receipt-item {
      display: flex;
      justify-content: space-between;
      margin-bottom: 5px;
    }

    .receipt-totals {
      border-top: 1px dashed #333;
      padding-top: 10px;
      margin-top: 10px;
    }

    .receipt-total {
      display: flex;
      justify-content: space-between;
      margin-bottom: 5px;
    }

    .receipt-total.main {
      font-weight: bold;
      font-size: 1.1em;
    }

    .receipt-dette {
      margin-top: 10px;
      padding: 10px;
      background-color: #fff3cd;
      border: 1px dashed #f39c12;
      border-radius: 4px;
      text-align: center;
      font-weight: bold;
    }

    .receipt-payment {
      margin-top: 10px;
      padding-top: 10px;
      border-top: 1px dashed #333;
    }

    /* Responsive */
    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }
      
      .sidebar {
        width: 100%;
        height: auto;
      }
      
      .nav-items {
        display: flex;
        overflow-x: auto;
      }
      
      .nav-section {
        margin-bottom: 0;
        min-width: max-content;
      }
      
      .nav-section h2 {
        display: none;
      }
      
      .flex {
        flex-direction: column;
        align-items: stretch;
      }
      
      .row {
        gap: 15px;
      }
      
      .col {
        flex: 1 1 100%;
      }
      
      .summary-grid, .payment-summary {
        grid-template-columns: 1fr;
      }
    }
  </style>
</head>
<body>
  <!-- Sidebar -->
  <div class="sidebar">
    <div class="logo">
      <span class="logo-icon">üìä</span>
      <h1>Gestion Commerciale</h1>
    </div>
    
    <div class="nav-section">
      <h2>Navigation</h2>
      <a href="#" class="nav-item active">
        <span class="nav-icon">‚ûï</span>
        <span>Nouvelle Vente</span>
      </a>
      <a href="/clients" class="nav-item">
        <span class="nav-icon">üë•</span>
        <span>Clients</span>
      </a>
      <a href="/clients/inscription" class="nav-item">
        <span class="nav-icon">‚ûï</span>
        <span>Nouveau Client</span>
      </a>
      <a href="/fournisseurs" class="nav-item">
        <span class="nav-icon">üè≠</span>
        <span>Gestion Fournisseurs</span>
      </a>
    </div>   
  </div>
  
  <!-- Main Content -->
  <div class="main-content">
    <div class="header">
      <h1>Nouvelle Vente</h1>
      <a href="/ventes" class="btn btn-secondary">
        <span class="btn-icon">‚Üê</span>
        Retour aux ventes
      </a>
    </div>

    <form id="venteForm" action="/ventes/traiter" method="POST">
      <!-- Informations client et date -->
      <div class="card">
        <h2>Informations g√©n√©rales</h2>
        <div class="row">
          <div class="col">
            <div class="form-group">
              <label for="client_id">Client</label>
              <select id="client_id" name="client_id" required>
                <option value="">-- S√©lectionnez un client --</option>
                <% if (clients && clients.length) { %>
                  <% clients.forEach(c => { %>
                    <option value="<%= c.id_client %>" data-nom="<%= c.nom %>" data-telephone="<%= c.telephone %>"><%= c.nom %> <% if (c.telephone) { %> - <%= c.telephone %> <% } %></option>
                  <% }) %>
                <% } %>
              </select>
              <div class="muted" style="margin-top: 8px;">
                Si client absent : <a href="/clients/new">Cr√©er un client</a>
              </div>
            </div>
          </div>

          <div class="col">
            <div class="form-group">
              <label for="date_vente">Date de vente</label>
              <input type="datetime-local" id="date_vente" name="date_vente" value="<%= new Date().toISOString().slice(0,16) %>" required />
            </div>
          </div>
        </div>
      </div>

      <!-- Ajout de produits -->
      <div class="card">
        <h2>Ajouter des produits</h2>
        <div class="flex">
          <div style="flex:1">
            <label for="selectProduit">Produit</label>
            <select id="selectProduit" class="small">
              <option value="">-- Choisir un produit --</option>
              <% if (produits && produits.length) { %>
                <% produits.forEach(p => { %>
                  <option value="<%= p.id_produit %>" 
                          data-nom="<%= p.nom.replace(/"/g,'&quot;') %>"
                          data-prixachat="<%= p.prix_achat ?? 0 %>"
                          data-prixvente="<%= p.prix_vente ?? 0 %>"
                          data-stock="<%= p.quantite_stock ?? 0 %>"
                          data-description="<%= (p.description||'').replace(/"/g,'&quot;') %>">
                    <%= p.nom %> (Stock: <%= p.quantite_stock ?? 0 %>)
                  </option>
                <% }) %>
              <% } %>
            </select>
          </div>

          <div style="width:110px">
            <label for="qty">Quantit√©</label>
            <input id="qty" type="number" min="1" value="1" class="small" />
          </div>

          <div style="width:140px">
            <label for="prixVente">Prix vente</label>
            <input id="prixVente" type="number" step="0.01" min="0" class="small" />
          </div>

          <div>
            <button type="button" id="btnAddProduit" class="btn">Ajouter</button>
          </div>
        </div>
      </div>

      <!-- Panier -->
      <div class="card">
        <h2>Panier</h2>
        <div class="table-container">
          <table id="tablePanier" style="display:none;">
            <thead>
              <tr>
                <th>Produit</th>
                <th>Description</th>
                <th class="text-right">Prix achat</th>
                <th class="text-right">Prix vente</th>
                <th class="text-right">Qt√©</th>
                <th class="text-right">Marge</th>
                <th class="text-right">Sous-total</th>
                <th></th>
              </tr>
            </thead>
            <tbody id="tbodyPanier"></tbody>
          </table>
        </div>

        <div id="videMsg" class="empty-state">
          <i>üõí</i>
          <p>Aucune ligne pour le moment</p>
          <p class="muted">Ajoutez un produit pour commencer</p>
        </div>
      </div>

      <!-- R√©sum√© et paiements -->
      <div class="card">
        <h2>R√©sum√© et paiements</h2>
        
        <div class="summary">
          <div class="summary-grid">
            <div>
              <div class="summary-item">
                <span>Total HT :</span>
                <span id="total">0.00</span>
              </div>
              <div class="summary-item">
                <span>Total marge :</span>
                <span id="totalMarge">0.00</span>
              </div>
            </div>
            
            <div>
              <div class="form-group">
                <label for="tax">Taxe (%)</label>
                <input id="tax" name="tax" type="number" step="0.01" min="0" value="0" class="small" />
              </div>
              <div class="summary-item summary-total">
                <span>Total TTC :</span>
                <span id="totalTTC">0.00</span>
              </div>
            </div>
            
            <div>
              <div class="summary-item">
                <span>Total pay√© :</span>
                <span id="totalPaye">0.00</span>
              </div>
              <div class="summary-item summary-total">
                <span>Reste √† payer :</span>
                <span id="reste">0.00</span>
              </div>
            </div>
          </div>

          <div class="divider"></div>

          <!-- Paiements -->
          <div>
            <h4>Paiements</h4>
            <div class="flex">
              <div class="flex-1">
                <input id="paymentAmount" type="number" step="0.01" min="0" placeholder="Montant" class="small" />
              </div>
              <div class="flex-1">
                <input id="paymentMode" type="text" placeholder="Mode (ex: Cash, MobileMoney)" class="small" />
              </div>
              <div>
                <button type="button" id="btnAddPayment" class="btn">Ajouter paiement</button>
              </div>
            </div>

            <div class="payments-list" id="paymentsList"></div>
          </div>
        </div>
      </div>

      <!-- Paiement Client pour impression re√ßu -->
      <div class="card payment-client">
        <h2>Paiement Client</h2>
        
        <div class="client-info" id="clientInfo" style="display: none;">
          <h3>Informations Client</h3>
          <p><strong>Nom:</strong> <span id="clientNom"></span></p>
          <p><strong>T√©l√©phone:</strong> <span id="clientTelephone"></span></p>
        </div>
        
        <div class="payment-summary">
          <div class="payment-field">
            <label for="montantTotal">Total √† payer</label>
            <input type="text" id="montantTotal" readonly class="small" value="0.00">
          </div>
          <div class="payment-field">
            <label for="montantDonne">Montant donn√©</label>
            <input type="number" step="0.01" min="0" id="montantDonne" name="montant_donne" class="small" placeholder="0.00">
          </div>
          <div class="payment-field">
            <label for="montantAPayer">Montant √† payer</label>
            <input type="number" step="0.01" min="0" id="montantAPayer" name="montant_paye" class="small" placeholder="0.00">
          </div>
        </div>
        
        <div class="payment-result" id="paymentResult">
          Cliquez sur "Calculer" pour voir le r√©sultat
        </div>
        
        <div style="margin-top: 20px; display: flex; gap: 15px;">
          <button type="button" id="btnCalculerPaiement" class="btn btn-success">Calculer</button>
          <button type="button" id="btnImprimerRecu" class="btn">Imprimer le re√ßu</button>
        </div>
      </div>

      <!-- Champs cach√©s pour soumission -->
      <div id="hiddenInputs"></div>

      <!-- Actions -->
      <div style="display: flex; gap: 16px; margin-top: 24px;">
        <button type="submit" class="btn" style="flex: 1;">Enregistrer la vente</button>
        <a href="/ventes" class="btn btn-secondary">Annuler</a>
      </div>
    </form>
  </div>

  <!-- Re√ßu √† imprimer (cach√© par d√©faut) -->
  <div class="receipt-container" id="receiptContainer">
    <div class="receipt" id="receipt">
      <div class="receipt-header">
        <h2>Boutique XYZ</h2>
        <p>123 Rue du Commerce</p>
        <p>T√©l: 01 23 45 67 89</p>
        <p id="receiptDate"></p>
      </div>
      
      <div class="receipt-client" id="receiptClient">
        <!-- Informations client seront ins√©r√©es ici -->
      </div>
      
      <div class="receipt-items" id="receiptItems">
        <!-- Les √©l√©ments du panier seront ins√©r√©s ici -->
      </div>
      
      <div class="receipt-totals">
        <div class="receipt-total">
          <span>Total:</span>
          <span id="receiptTotal">0.00</span>
        </div>
        <div class="receipt-total">
          <span>Montant donn√©:</span>
          <span id="receiptMontantDonne">0.00</span>
        </div>
        <div class="receipt-total main" id="receiptResultLine">
          <span id="receiptResultLabel">Monnaie rendue:</span>
          <span id="receiptResultValue">0.00</span>
        </div>
      </div>
      
      <!-- Section dette qui s'affiche seulement si le client n'a pas tout pay√© -->
      <div class="receipt-dette" id="receiptDette" style="display: none;">
        <p>‚ö†Ô∏è DETTE ENREGISTR√âE</p>
        <p>Reste √† payer: <span id="receiptDetteMontant">0.00</span></p>
      </div>
      
      <div class="receipt-payment">
        <p>Mode de paiement: <span id="receiptPaymentMode">Esp√®ces</span></p>
        <p>Merci de votre visite !</p>
      </div>
    </div>
  </div>

  <script>
    console.log("Script vente.ejs starting");
    (function(){
      const qs = s => document.querySelector(s);
      const qsa = s => Array.from(document.querySelectorAll(s));

      let cart = [];
      let payments = [];
      let currentClient = null;

      const selectProduit = qs('#selectProduit');
      const qtyInput = qs('#qty');
      const prixVenteInput = qs('#prixVente');
      const btnAddProduit = qs('#btnAddProduit');
      const tbodyPanier = qs('#tbodyPanier');
      const tablePanier = qs('#tablePanier');
      const videMsg = qs('#videMsg');
      const totalEl = qs('#total');
      const totalMargeEl = qs('#totalMarge');
      const taxInput = qs('#tax');
      const totalTTCEl = qs('#totalTTC');
      const resteEl = qs('#reste');
      const hiddenInputs = qs('#hiddenInputs');
      const btnAddPayment = qs('#btnAddPayment');
      const paymentAmount = qs('#paymentAmount');
      const paymentMode = qs('#paymentMode');
      const paymentsList = qs('#paymentsList');
      const venteForm = qs('#venteForm');
      
      // Nouveaux √©l√©ments pour le re√ßu
      const clientSelect = qs('#client_id');
      const clientInfo = qs('#clientInfo');
      const clientNom = qs('#clientNom');
      const clientTelephone = qs('#clientTelephone');
      const montantTotal = qs('#montantTotal');
      const montantDonne = qs('#montantDonne');
      const montantAPayer = qs('#montantAPayer');
      const paymentResult = qs('#paymentResult');
      const btnCalculerPaiement = qs('#btnCalculerPaiement');
      const btnImprimerRecu = qs('#btnImprimerRecu');
      const receiptContainer = qs('#receiptContainer');
      const receiptDate = qs('#receiptDate');
      const receiptClient = qs('#receiptClient');
      const receiptItems = qs('#receiptItems');
      const receiptTotal = qs('#receiptTotal');
      const receiptMontantDonne = qs('#receiptMontantDonne');
      const receiptResultLabel = qs('#receiptResultLabel');
      const receiptResultValue = qs('#receiptResultValue');
      const receiptDette = qs('#receiptDette');
      const receiptDetteMontant = qs('#receiptDetteMontant');
      const receiptPaymentMode = qs('#receiptPaymentMode');

      function format(n){ return parseFloat(n||0).toFixed(2); }

      function updateSummary(){
        let total = 0, totalMarge = 0;
        cart.forEach(l => {
          total += l.subtotal;
          totalMarge += l.marge;
        });

        const taxPct = parseFloat(taxInput.value || 0);
        const totalTTC = total * (1 + taxPct/100);
        const totalPaiements = payments.reduce((s,p) => s + Number(p.amount||0),0);
        const reste = Math.max(0, totalTTC - totalPaiements);

        totalEl.textContent = format(total);
        totalMargeEl.textContent = format(totalMarge);
        totalTTCEl.textContent = format(totalTTC);
        resteEl.textContent = format(reste);
        
        // Mettre √† jour le montant total pour le re√ßu
        montantTotal.value = format(totalTTC);
        
        // Initialiser le montant √† payer avec le total TTC si vide
        if (!montantAPayer.value || parseFloat(montantAPayer.value) === 0) {
          montantAPayer.value = format(totalTTC);
        }

        rebuildHiddenInputs();
      }

      function rebuildHiddenInputs(){
        hiddenInputs.innerHTML = '';

        console.log("=== DEBUG rebuildHiddenInputs ===");
        console.log("Montant donn√©:", montantDonne.value);
        console.log("Montant √† payer:", montantAPayer.value);

        cart.forEach((l, idx) => {
          const fields = {
            produit_id: l.produit_id,
            quantite: l.qty,
            prix_vente: l.prix_vente
          };
          
          Object.entries(fields).forEach(([field, value]) => {
            const inp = document.createElement('input');
            inp.type = 'hidden';
            inp.name = `produits[${idx}][${field}]`;
            inp.value = value;
            hiddenInputs.appendChild(inp);
          });
        });

        // Les champs montant_donne et montant_paye sont d√©j√† dans le formulaire
        // avec les attributs "name", donc pas besoin de les recr√©er
        
        const inpTotal = document.createElement('input');
        inpTotal.type='hidden'; inpTotal.name='total'; inpTotal.value=totalEl.textContent;
        hiddenInputs.appendChild(inpTotal);

        const inpTax = document.createElement('input');
        inpTax.type='hidden'; inpTax.name='tax'; inpTax.value=taxInput.value;
        hiddenInputs.appendChild(inpTax);
      }

      function renderCart(){
        tbodyPanier.innerHTML = '';
        if(cart.length === 0){
          tablePanier.style.display = 'none';
          videMsg.style.display = 'block';
          return;
        }
        tablePanier.style.display = 'table';
        videMsg.style.display = 'none';

        cart.forEach((l, idx)=>{
          const tr = document.createElement('tr');
          tr.innerHTML = `
            <td>${l.nom}</td>
            <td>${l.description||''}</td>
            <td class="text-right">${format(l.prix_achat)}</td>
            <td class="text-right">${format(l.prix_vente)}</td>
            <td class="text-right">${l.qty}</td>
            <td class="text-right">${format(l.marge)}</td>
            <td class="text-right">${format(l.subtotal)}</td>
            <td class="text-right">
              <button type="button" data-idx="${idx}" class="btn btn-danger small btnRemove">Suppr</button>
            </td>
          `;
          tbodyPanier.appendChild(tr);
        });

        qsa('.btnRemove').forEach(b=>b.addEventListener('click', e=>{
          const i = Number(e.currentTarget.dataset.idx);
          cart.splice(i,1);
          updateCartComputed();
        }));

        updateSummary();
      }

      function updateCartComputed(){
        cart.forEach(l=>{
          l.subtotal = l.prix_vente * l.qty;
          l.marge = (l.prix_vente - l.prix_achat) * l.qty;
        });
        renderCart();
      }

      // Gestion du changement de client
      clientSelect.addEventListener('change', () => {
        const selectedOption = clientSelect.selectedOptions[0];
        if (selectedOption && selectedOption.value) {
          currentClient = {
            nom: selectedOption.dataset.nom,
            telephone: selectedOption.dataset.telephone
          };
          clientNom.textContent = currentClient.nom;
          clientTelephone.textContent = currentClient.telephone || 'Non renseign√©';
          clientInfo.style.display = 'block';
        } else {
          currentClient = null;
          clientInfo.style.display = 'none';
        }
      });

      // Ajouter un produit
      btnAddProduit.addEventListener('click', ()=>{
        const opt = selectProduit.selectedOptions[0];
        if(!opt || !opt.value){ alert('Choisissez un produit'); return; }

        const qty = parseInt(qtyInput.value||0);
        if(qty <= 0){ alert('Quantit√© invalide'); return; }

        const stock = parseInt(opt.dataset.stock||0);
        if(qty > stock && !confirm(`Quantit√© (${qty}) est sup√©rieure au stock (${stock}). Continuer ?`)) return;

        const prixAchat = parseFloat(opt.dataset.prixachat||0);
        const prixVente = parseFloat(prixVenteInput.value||opt.dataset.prixvente||0);

        cart.push({
          produit_id: opt.value,
          nom: opt.dataset.nom,
          description: opt.dataset.description,
          qty,
          prix_achat: prixAchat,
          prix_vente: prixVente,
          subtotal: prixVente*qty,
          marge: (prixVente-prixAchat)*qty
        });

        selectProduit.value='';
        qtyInput.value=1;
        prixVenteInput.value='';

        updateCartComputed();
      });

      // Paiements
      btnAddPayment.addEventListener('click', ()=>{
        const amount = parseFloat(paymentAmount.value||0);
        const mode = (paymentMode.value||'N/A').trim();
        if(amount <= 0){ alert('Montant paiement invalide'); return; }
        payments.push({amount, mode});
        renderPayments();
        paymentAmount.value=''; paymentMode.value='';
        updateSummary();
      });

      function renderPayments(){
        paymentsList.innerHTML='';
        if(payments.length===0){
          paymentsList.innerHTML='<div class="muted">Aucun paiement ajout√©</div>';
          return;
        }
        const ul = document.createElement('ul');
        payments.forEach((p, idx)=>{
          const li = document.createElement('li');
          li.innerHTML = `${format(p.amount)} ‚Äî ${p.mode} <button type="button" data-idx="${idx}" class="btn btn-danger small">Suppr</button>`;
          ul.appendChild(li);
        });
        paymentsList.appendChild(ul);

        qsa('.btn-danger.small').forEach(b=>{
          b.addEventListener('click', e=>{
            const idx = Number(e.currentTarget.dataset.idx);
            payments.splice(idx,1);
            renderPayments();
            updateSummary();
          });
        });
      }

      // Calculer le paiement
      btnCalculerPaiement.addEventListener('click', () => {
        const totalAPayer = parseFloat(montantTotal.value || 0);
        const donne = parseFloat(montantDonne.value || 0);
        const aPayer = parseFloat(montantAPayer.value || 0);
        
        // Le montant pay√© ne peut pas d√©passer le total
        const montantPayeEffectif = Math.min(aPayer, totalAPayer);
        
        // Calculer le reste √† payer
        const resteAPayer = totalAPayer - montantPayeEffectif;
        
        // Calculer la monnaie √† rendre
        const monnaieARendre = Math.max(0, donne - montantPayeEffectif);
        
        console.log("=== DEBUG Calcul Paiement ===");
        console.log("Total √† payer:", totalAPayer);
        console.log("Montant donn√©:", donne);
        console.log("Montant √† payer saisi:", aPayer);
        console.log("Montant pay√© effectif:", montantPayeEffectif);
        console.log("Reste √† payer:", resteAPayer);
        console.log("Monnaie √† rendre:", monnaieARendre);

        if (resteAPayer > 0) {
          // Il reste de l'argent √† payer
          paymentResult.textContent = `Paiement partiel! Reste √† payer: ${format(resteAPayer)}`;
          paymentResult.className = 'payment-result reste';
        } else if (monnaieARendre > 0) {
          // Monnaie √† rendre
          paymentResult.textContent = `Paiement complet! Monnaie √† rendre: ${format(monnaieARendre)}`;
          paymentResult.className = 'payment-result monnaie';
        } else {
          // Paiement exact
          paymentResult.textContent = `Paiement exact - Merci !`;
          paymentResult.className = 'payment-result';
          paymentResult.style.borderColor = '#3498db';
          paymentResult.style.color = '#3498db';
        }
        
        // Mettre √† jour le montant √† payer avec la valeur corrig√©e
        montantAPayer.value = format(montantPayeEffectif);
      });

      // Imprimer le re√ßu
      btnImprimerRecu.addEventListener('click', () => {
        if (cart.length === 0) {
          alert("Aucun produit dans le panier");
          return;
        }
        
        if (!currentClient) {
          alert("Veuillez s√©lectionner un client");
          return;
        }
        
        const totalAPayer = parseFloat(montantTotal.value || 0);
        const donne = parseFloat(montantDonne.value || 0);
        const aPayer = parseFloat(montantAPayer.value || 0);
        
        const montantPayeEffectif = Math.min(aPayer, totalAPayer);
        const resteAPayer = totalAPayer - montantPayeEffectif;
        const monnaieARendre = Math.max(0, donne - montantPayeEffectif);
        
        // Masquer la section dette par d√©faut
        receiptDette.style.display = 'none';
        
        if (resteAPayer > 0) {
          // Paiement partiel - afficher la dette
          receiptResultLabel.textContent = "Reste √† payer:";
          receiptResultValue.textContent = format(resteAPayer);
          receiptResultValue.style.color = "#f39c12";
          
          // Afficher la section dette
          receiptDette.style.display = 'block';
          receiptDetteMontant.textContent = format(resteAPayer);
        } else if (monnaieARendre > 0) {
          // Monnaie √† rendre
          receiptResultLabel.textContent = "Monnaie rendue:";
          receiptResultValue.textContent = format(monnaieARendre);
          receiptResultValue.style.color = "#2ecc71";
        } else {
          // Paiement exact
          receiptResultLabel.textContent = "Paiement exact";
          receiptResultValue.textContent = "0.00";
          receiptResultValue.style.color = "#3498db";
        }
        
        // Mettre √† jour le re√ßu
        receiptDate.textContent = new Date().toLocaleString('fr-FR');
        
        // Informations client
        receiptClient.innerHTML = `
          <p><strong>Client:</strong> ${currentClient.nom}</p>
          <p><strong>T√©l:</strong> ${currentClient.telephone || 'Non renseign√©'}</p>
        `;
        
        // Vider et remplir les √©l√©ments du re√ßu
        receiptItems.innerHTML = '';
        cart.forEach(item => {
          const itemDiv = document.createElement('div');
          itemDiv.className = 'receipt-item';
          itemDiv.innerHTML = `
            <span>${item.nom} x${item.qty}</span>
            <span>${format(item.prix_vente * item.qty)}</span>
          `;
          receiptItems.appendChild(itemDiv);
        });
        
        receiptTotal.textContent = format(totalAPayer);
        receiptMontantDonne.textContent = format(donne);
        
        // Utiliser le premier mode de paiement ou "Esp√®ces" par d√©faut
        const paymentModeValue = payments.length > 0 ? payments[0].mode : "Esp√®ces";
        receiptPaymentMode.textContent = paymentModeValue;
        
        // Afficher et imprimer le re√ßu
        receiptContainer.style.display = 'block';
        window.print();
        receiptContainer.style.display = 'none';
      });

      taxInput.addEventListener('input', updateSummary);

      venteForm.addEventListener('submit', e=>{
        if(!qs('#client_id').value){ alert('Choisir un client'); e.preventDefault(); return; }
        if(cart.length===0){ alert('Ajoutez au moins un produit'); e.preventDefault(); return; }
        
        // Validation finale
        const totalAPayer = parseFloat(montantTotal.value || 0);
        const aPayer = parseFloat(montantAPayer.value || 0);
        const montantPayeEffectif = Math.min(aPayer, totalAPayer);
        const dette = totalAPayer - montantPayeEffectif;
        
        console.log("=== FINAL SUBMIT ===");
        console.log("Montant pay√© qui sera envoy√©:", montantPayeEffectif);
        console.log("Dette:", dette);
        
        if (dette > 0) {
          if (!confirm(`Le client a une dette de ${format(dette)}. Confirmer l'enregistrement ?`)) {
            e.preventDefault();
            return;
          }
        }
      });

      renderCart();
      renderPayments();

    })();
  </script>
</body>

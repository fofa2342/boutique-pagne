<!DOCTYPE html>
<html lang="fr">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Entrée de Stock</title>
  <style>
    :root {
      --primary-color: #3498db;
      --secondary-color: #2c3e50;
      --accent-color: #e74c3c;
      --light-color: #ecf0f1;
      --dark-color: #34495e;
      --success-color: #2ecc71;
      --warning-color: #f39c12;
      --border-radius: 8px;
      --box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      --transition: all 0.3s ease;
    }

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    body {
      display: flex;
      min-height: 100vh;
      background-color: #f5f7fa;
      color: #333;
    }

    .sidebar {
      width: 280px;
      background-color: var(--secondary-color);
      color: white;
      padding: 20px 0;
      box-shadow: var(--box-shadow);
      z-index: 100;
      transition: var(--transition);
      overflow-y: auto;
    }

    .logo {
      display: flex;
      align-items: center;
      padding: 0 20px 20px;
      border-bottom: 1px solid rgba(255, 255, 255, 0.1);
      margin-bottom: 20px;
    }

    .logo h1 {
      font-size: 1.5rem;
      margin-left: 10px;
    }

    .logo-icon {
      font-size: 1.8rem;
      color: var(--primary-color);
    }

    .nav-section {
      margin-bottom: 30px;
    }

    .nav-section h2 {
      font-size: 1rem;
      text-transform: uppercase;
      letter-spacing: 1px;
      padding: 0 20px;
      margin-bottom: 15px;
      color: rgba(255, 255, 255, 0.6);
    }

    .nav-item {
      display: flex;
      align-items: center;
      padding: 12px 20px;
      color: rgba(255, 255, 255, 0.8);
      text-decoration: none;
      transition: var(--transition);
      border-left: 3px solid transparent;
    }

    .nav-item:hover {
      background-color: rgba(255, 255, 255, 0.05);
      color: white;
      border-left-color: var(--primary-color);
    }

    .nav-item.active {
      background-color: rgba(255, 255, 255, 0.1);
      color: white;
      border-left-color: var(--primary-color);
    }

    .nav-icon {
      margin-right: 12px;
      font-size: 1.2rem;
    }

    .main-content {
      flex: 1;
      padding: 30px;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: flex-start;
    }

    .header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 30px;
      width: 100%;
      max-width: 800px;
    }

    .header h1 {
      color: var(--secondary-color);
      font-size: 1.8rem;
    }

    .btn {
      display: inline-flex;
      align-items: center;
      padding: 10px 20px;
      background-color: var(--primary-color);
      color: white;
      text-decoration: none;
      border-radius: var(--border-radius);
      font-weight: 500;
      transition: var(--transition);
      border: none;
      cursor: pointer;
    }

    .btn:hover {
      background-color: #2980b9;
      transform: translateY(-2px);
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.15);
    }

    .btn-icon {
      margin-right: 8px;
    }

    .btn-secondary {
      background-color: var(--light-color);
      color: var(--dark-color);
    }

    .btn-secondary:hover {
      background-color: #dde4e6;
    }

    .btn-success {
      background-color: var(--success-color);
    }

    .btn-success:hover {
      background-color: #27ae60;
    }

    .form-container {
      background-color: white;
      border-radius: var(--border-radius);
      box-shadow: var(--box-shadow);
      padding: 30px;
      width: 100%;
      max-width: 800px;
    }

    .form-group {
      margin-bottom: 20px;
    }

    label {
      display: block;
      margin-bottom: 8px;
      font-weight: 500;
      color: var(--dark-color);
    }

    input, textarea, select {
      width: 100%;
      padding: 12px 15px;
      border: 1px solid #ddd;
      border-radius: var(--border-radius);
      font-size: 1rem;
      transition: var(--transition);
    }

    input:focus, textarea:focus, select:focus {
      outline: none;
      border-color: var(--primary-color);
      box-shadow: 0 0 0 3px rgba(52, 152, 219, 0.2);
    }

    textarea {
      min-height: 80px;
      resize: vertical;
    }

    .required::after {
      content: " *";
      color: var(--accent-color);
    }

    .form-actions {
      display: flex;
      justify-content: flex-end;
      gap: 15px;
      margin-top: 30px;
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
    }

    .quick-links {
      display: flex;
      gap: 10px;
      margin-bottom: 20px;
      flex-wrap: wrap;
    }

    .quick-link {
      display: inline-flex;
      align-items: center;
      padding: 8px 15px;
      background-color: var(--light-color);
      color: var(--dark-color);
      text-decoration: none;
      border-radius: var(--border-radius);
      font-size: 0.9rem;
      transition: var(--transition);
    }

    .quick-link:hover {
      background-color: var(--primary-color);
      color: white;
    }

    .stock-info {
      background-color: var(--light-color);
      padding: 15px;
      border-radius: var(--border-radius);
      margin-top: 10px;
      border-left: 4px solid var(--primary-color);
    }

    .stock-current {
      font-weight: bold;
      color: var(--secondary-color);
    }

    .product-preview {
      background-color: #f8f9fa;
      padding: 15px;
      border-radius: var(--border-radius);
      margin-top: 10px;
      border: 1px solid #e9ecef;
    }

    @media (max-width: 768px) {
      body {
        flex-direction: column;
      }
      
      .sidebar {
        width: 100%;
        height: auto;
      }
      
      .nav-items {
        display: flex;
        overflow-x: auto;
      }
      
      .nav-section {
        margin-bottom: 0;
        min-width: max-content;
      }
      
      .nav-section h2 {
        display: none;
      }
      
      .form-container {
        padding: 20px;
      }
      
      .form-actions {
        flex-direction: column;
      }
      
      .btn {
        width: 100%;
        justify-content: center;
      }
      
      .form-row {
        grid-template-columns: 1fr;
      }
      
      .quick-links {
        flex-direction: column;
      }
    }
  </style>
</head>
<body>
  <div class="sidebar">
    <div class="logo">
      <span class="logo-icon">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
          <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
          <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
          <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
          <line x1="12" y1="22.08" x2="12" y2="12"></line>
        </svg>
      </span>
      <h1>Gestion Stock</h1>
    </div>
    
    <div class="nav-section">
      <h2>Navigation</h2>
      <a href="/produits" class="nav-item">
        <span class="nav-icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
            <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
            <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
            <line x1="12" y1="22.08" x2="12" y2="12"></line>
          </svg>
        </span>
        <span>Liste Produits</span>
      </a>
      <a href="/produits/entree" class="nav-item active">
        <span class="nav-icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          </svg>
        </span>
        <span>Entrée Stock</span>
      </a>
      <a href="/produits/entree-multiple" class="nav-item">
        <span class="nav-icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="7 10 12 15 17 10"></polyline>
            <line x1="12" y1="15" x2="12" y2="3"></line>
            <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
          </svg>
        </span>
        <span>Entrée Multiple</span>
      </a>
      <a href="/produits/sortie" class="nav-item">
        <span class="nav-icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <polyline points="17 14 12 9 7 14"></polyline>
            <line x1="12" y1="9" x2="12" y2="21"></line>
            <path d="M3 9V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2v4"></path>
          </svg>
        </span>
        <span>Sortie Stock</span>
      </a>
    </div>

    <div class="nav-section">
      <h2>Actions Rapides</h2>
      <a href="/produits/ajout" class="nav-item">
        <span class="nav-icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"></line>
            <line x1="5" y1="12" x2="19" y2="12"></line>
          </svg>
        </span>
        <span>Nouveau Produit</span>
      </a>
      <a href="/fournisseurs/inscription" class="nav-item">
        <span class="nav-icon">
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="3" y="3" width="7" height="7"></rect>
            <rect x="14" y="3" width="7" height="7"></rect>
            <rect x="14" y="14" width="7" height="7"></rect>
            <rect x="3" y="14" width="7" height="7"></rect>
          </svg>
        </span>
        <span>Nouveau Fournisseur</span>
      </a>
    </div>
  </div>
  
  <div class="main-content">
    <div class="header">
      <h1>Entrée de Stock</h1>
      <div>
        <a href="/produits/entree-multiple" class="btn btn-success">
          <span class="btn-icon">
            <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <line x1="16.5" y1="9.4" x2="7.5" y2="4.21"></line>
              <path d="M21 16V8a2 2 0 0 0-1-1.73l-7-4a2 2 0 0 0-2 0l-7 4A2 2 0 0 0 3 8v8a2 2 0 0 0 1 1.73l7 4a2 2 0 0 0 2 0l7-4A2 2 0 0 0 21 16z"></path>
              <polyline points="3.27 6.96 12 12.01 20.73 6.96"></polyline>
              <line x1="12" y1="22.08" x2="12" y2="12"></line>
            </svg>
          </span>
          Entrée Multiple
        </a>
        <a href="/produits" class="btn btn-secondary">
          <span class="btn-icon">←</span>
          Retour
        </a>
      </div>
    </div>
    
    <div class="form-container">
      <!-- Liens rapides -->
      <div class="quick-links">
        <a href="/produits/ajout" class="quick-link">
          <span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:inline-block;vertical-align:middle;margin-right:6px;">
              <line x1="12" y1="5" x2="12" y2="19"></line>
              <line x1="5" y1="12" x2="19" y2="12"></line>
            </svg>
            Nouveau Produit
          </span>
        </a>
        <a href="/fournisseurs/inscription" class="quick-link">
          <span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:inline-block;vertical-align:middle;margin-right:6px;">
              <rect x="3" y="3" width="7" height="7"></rect>
              <rect x="14" y="3" width="7" height="7"></rect>
              <rect x="14" y="14" width="7" height="7"></rect>
              <rect x="3" y="14" width="7" height="7"></rect>
            </svg>
            Nouveau Fournisseur
          </span>
        </a>
        <a href="/fournisseurs" class="quick-link">
          <span>
            <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" style="display:inline-block;vertical-align:middle;margin-right:6px;">
              <line x1="8" y1="6" x2="21" y2="6"></line>
              <line x1="8" y1="12" x2="21" y2="12"></line>
              <line x1="8" y1="18" x2="21" y2="18"></line>
              <line x1="3" y1="6" x2="3.01" y2="6"></line>
              <line x1="3" y1="12" x2="3.01" y2="12"></line>
              <line x1="3" y1="18" x2="3.01" y2="18"></line>
            </svg>
            Liste Fournisseurs
          </span>
        </a>
      </div>

      <form action="/produits/entree" method="POST">
        <!-- Informations fournisseur -->
        <div class="form-group">
          <label for="fournisseur_nom" class="required">Fournisseur :</label>
          <select id="fournisseur_nom" name="fournisseur_nom" required>
  <option value="">Sélectionnez un fournisseur</option>
  <% fournisseurs.forEach(f => { %>
    <option value="<%= f.nom %>">
      <%= f.nom %> - <%= f.pays || "N/A" %> (<%= f.telephone || "pas de contact" %>)
    </option>
  <% }) %>
</select>
          <small style="color: #666; margin-top: 5px; display: block;">
            Si le fournisseur n'existe pas, <a href="/fournisseurs/inscription" style="color: var(--primary-color);">créez-le d'abord</a>
          </small>
        </div>

        <!-- Sélection du produit -->
        <div class="form-group">
          <label for="produit_id" class="required">Produit :</label>
          <select id="produit_id" name="produit_id" required>
            <option value="">Sélectionnez un produit</option>
            <% if (produits && produits.length > 0) { %>
              <% produits.forEach(produit => { %>
                <option value="<%= produit.id_produit %>" 
                        data-stock="<%= produit.quantite_stock %>"
                        data-prix="<%= produit.prix_achat %>">
                  <%= produit.nom %> (Stock: <%= produit.quantite_stock %>)
                </option>
              <% }) %>
            <% } %>
          </select>
          <small style="color: #666; margin-top: 5px; display: block;">
            Si le produit n'existe pas, <a href="/produits/ajout" style="color: var(--primary-color);">créez-le d'abord</a>
          </small>
        </div>

        <!-- Informations stock actuel -->
        <div id="stock-info" class="stock-info" style="display: none;">
          <strong>Stock actuel :</strong> 
          <span id="stock-current" class="stock-current">0</span> unités
        </div>

        <!-- Quantité à ajouter -->
        <div class="form-group">
          <label for="quantite" class="required">Quantité à ajouter :</label>
          <input type="number" id="quantite" name="quantite" min="1" required 
                 placeholder="Ex: 50">
        </div>

        <div class="form-row">
          <div class="form-group">
            <label for="raison">Raison de l'entrée :</label>
            <select id="raison" name="raison">
              <option value="achat">Achat fournisseur</option>
              <option value="retour">Retour client</option>
              <option value="inventaire">Correction d'inventaire</option>
              <option value="production">Production interne</option>
              <option value="autre">Autre</option>
            </select>
          </div>

          <div class="form-group">
            <label for="prix_achat">Prix d'achat unitaire (FCFA) :</label>
            <input type="number" id="prix_achat" name="prix_achat" step="0.01" min="0" 
                   placeholder="0.00">
          </div>
        </div>

        <div class="form-group">
          <label for="notes">Notes :</label>
          <textarea id="notes" name="notes" placeholder="Référence commande, numéro de lot, informations supplémentaires..."></textarea>
        </div>

        <!-- Aperçu du mouvement -->
        <div id="mouvement-preview" class="product-preview" style="display: none;">
          <h4 style="margin-bottom: 10px;">Aperçu de l'entrée :</h4>
          <div><strong>Produit :</strong> <span id="preview-nom">-</span></div>
          <div><strong>Stock avant :</strong> <span id="preview-stock-avant">0</span> unités</div>
          <div><strong>Quantité ajoutée :</strong> <span id="preview-quantite">0</span> unités</div>
          <div><strong>Stock après :</strong> <span id="preview-stock-apres">0</span> unités</div>
        </div>

        <div class="form-actions">
          <button type="reset" class="btn btn-secondary">Effacer</button>
          <button type="submit" class="btn btn-primary">Enregistrer l'entrée</button>
        </div>
      </form>
    </div>
  </div>

  <script>
    document.addEventListener('DOMContentLoaded', function() {
      const navItems = document.querySelectorAll('.nav-item');
      const produitSelect = document.getElementById('produit_id');
      const quantiteInput = document.getElementById('quantite');
      const stockInfo = document.getElementById('stock-info');
      const stockCurrent = document.getElementById('stock-current');
      const mouvementPreview = document.getElementById('mouvement-preview');
      
      // Gestion de la sélection du produit
      produitSelect.addEventListener('change', function() {
        const selectedOption = this.options[this.selectedIndex];
        const stock = parseInt(selectedOption.getAttribute('data-stock')) || 0;
        
        if (this.value) {
          stockInfo.style.display = 'block';
          stockCurrent.textContent = stock;
          mouvementPreview.style.display = 'block';
          document.getElementById('preview-nom').textContent = selectedOption.text.split(' (Stock:')[0];
          document.getElementById('preview-stock-avant').textContent = stock;
          updatePreview();
        } else {
          stockInfo.style.display = 'none';
          mouvementPreview.style.display = 'none';
        }
      });

      // Mise à jour de l'aperçu
      quantiteInput.addEventListener('input', updatePreview);

      function updatePreview() {
        const stockAvant = parseInt(stockCurrent.textContent) || 0;
        const quantite = parseInt(quantiteInput.value) || 0;
        const stockApres = stockAvant + quantite;
        
        document.getElementById('preview-quantite').textContent = quantite;
        document.getElementById('preview-stock-apres').textContent = stockApres;
      }

      // Navigation active
      navItems.forEach(item => {
        item.addEventListener('click', function() {
          navItems.forEach(i => i.classList.remove('active'));
          this.classList.add('active');
        });
      });
    });
  </script>
</body>
</html>
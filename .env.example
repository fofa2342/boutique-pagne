# Database Configuration
DB_HOST=your-database-host.example.com
DB_USER=your-database-user
DB_PASS=your-secure-database-password
DB_NAME=your-database-name
DB_PORT=25881

# Application Configuration
PORT=2000

# App environment: development | production
NODE_ENV=development

# Required for secure sessions (MUST generate a long random string in production)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
SESSION_SECRET=CHANGE_ME__GENERATE_A_LONG_RANDOM_SECRET_128_CHARS_MINIMUM

# Optional: Path to SSL CA certificate (required for production)
# DB_SSL_CA=/path/to/ca-certificate.crt
